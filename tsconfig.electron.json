{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist-electron",
        "baseUrl": ".",
        "types": [
            "node",
            "electron"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "electron",
        "shared"
    ],
    "exclude": [
        "src"
    ]
}